{
  "compilerOptions": {
    "target": "ES2022", // ðŸ”„ Mais moderno que ES5
    "lib": ["DOM", "DOM.Iterable", "ES2022"], // ðŸ”„ CompatÃ­vel com React 18+ e Next 15
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", // âœ… ObrigatÃ³rio no Next 14+ com Turbopack
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "**/*.js"]
}
